<?xml version='1.0' encoding='utf-8'?>
<widget id="io.kpj.evader" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Evader</name>
    <description>
        A simple obstacle evasion game
    </description>
    <author email="kpjkpjkpjkpjkpjkpj@gmail.com" href="">
        kpj
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device-motion" spec="https://git-wip-us.apache.org/repos/asf/cordova-plugin-device-motion.git" />
</widget>
